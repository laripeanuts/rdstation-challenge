{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "lerna run start",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "dev": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "prepare": "husky",
    "lint:frontend": "yarn --cwd frontend lint",
    "lint:fix:frontend": "yarn --cwd frontend lint:fix",
    "test:frontend": "yarn --cwd frontend test --watchAll=false",
    "test:coverage:frontend": "yarn --cwd frontend test:coverage",
    "build:frontend": "yarn --cwd frontend build"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^9.1.0",
    "husky": "^9.0.0",
    "lerna": "^8.0.2",
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx}": [
      "cd frontend && eslint --fix --max-warnings 0"
    ]
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}